<div id="chat-widget" style="max-width:600px;margin:auto">
  <h2>Legal AI Chat</h2>

  <div id="chat-container"
       style="border:1px solid #ccc;min-height:300px;padding:10px;overflow-y:auto">
  </div>

  <input id="user-message" placeholder="Type your message" />
  <button id="send-btn">Send</button>
  <button id="save-btn">Save Chat</button>
</div>

<%= javascript_include_tag "chat" %>
